<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.SelectedFoodActivity">

    <Button
        android:id="@+id/btn_save"
        android:layout_width="119dp"
        android:layout_height="61dp"
        android:layout_marginBottom="22dp"
        android:layout_marginEnd="135dp"
        android:layout_marginLeft="130dp"
        android:layout_marginRight="135dp"
        android:layout_marginStart="130dp"
        android:text="Save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btn_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="66dp"
        android:layout_marginEnd="83dp"
        android:layout_marginRight="83dp"
        android:layout_marginTop="70dp"
        android:clickable="true"
        android:src="@android:drawable/arrow_up_float"
        app:backgroundTint="@color/DiaColor"
        app:layout_constraintBottom_toTopOf="@+id/toolbar2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/foodName" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btn_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="66dp"
        android:layout_marginEnd="152dp"
        android:layout_marginLeft="69dp"
        android:layout_marginRight="152dp"
        android:layout_marginStart="69dp"
        android:layout_marginTop="70dp"
        android:clickable="true"
        android:src="@android:drawable/arrow_down_float"
        app:backgroundTint="@color/DiaColor"
        app:layout_constraintBottom_toTopOf="@+id/toolbar2"
        app:layout_constraintEnd_toStartOf="@+id/btn_up"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/foodName"
        app:layout_constraintVertical_bias="0.0" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="364dp"
        android:layout_height="237dp"
        android:layout_marginBottom="119dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="88dp"
        android:background="#92a1f5"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toTopOf="@+id/btn_save"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_up" />

    <EditText
        android:id="@+id/txt_quantity"
        style="@android:style/Widget.EditText"
        android:layout_width="149dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="70dp"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="71dp"
        android:cursorVisible="false"
        android:ems="10"
        android:inputType="numberDecimal"
        android:linksClickable="false"
        android:longClickable="false"
        android:paddingLeft="60dp"
        android:text="1.0"
        android:clickable="false"
        android:focusable="false"
        app:layout_constraintBottom_toTopOf="@+id/editText"
        app:layout_constraintEnd_toStartOf="@+id/btn_up"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/btn_down"
        app:layout_constraintTop_toBottomOf="@+id/foodName"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="341dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:text="Nutrients"
        android:textColor="@android:color/black"
        android:textColorLink="@android:color/background_dark"
        app:layout_constraintBottom_toTopOf="@+id/btn_save"
        app:layout_constraintEnd_toStartOf="@+id/toolbar2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toolbar2"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/foodName"
        android:layout_width="317dp"
        android:layout_height="44dp"
        android:layout_marginEnd="40dp"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="40dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="5dp"
        android:text="Product Name"
        android:textAllCaps="false"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:paddingLeft="15dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="77dp"
        android:layout_height="28dp"
        android:layout_marginBottom="7dp"
        android:layout_marginEnd="165dp"
        android:layout_marginLeft="142dp"
        android:layout_marginRight="165dp"
        android:layout_marginStart="142dp"
        android:text="Quantity"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/txt_quantity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txt_calories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="308dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="308dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="16dp"
        android:text="Calories"
        app:layout_constraintBottom_toTopOf="@+id/toolbar2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/toolbar2"
        app:layout_constraintTop_toBottomOf="@+id/editText"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txt_carbs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="308dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="308dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="124dp"
        android:text="Carbs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/toolbar2"
        app:layout_constraintTop_toTopOf="@+id/editText" />

    <TextView
        android:id="@+id/txt_Protein"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginBottom="36dp"
        android:layout_marginEnd="136dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="136dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="16dp"
        android:text="Protein"
        app:layout_constraintBottom_toTopOf="@+id/txt_Fats"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/toolbar2"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

    <TextView
        android:id="@+id/txt_Fats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="86dp"
        android:layout_marginLeft="200dp"
        android:layout_marginRight="86dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="76dp"
        android:text="Fats"
        app:layout_constraintEnd_toStartOf="@+id/toolbar2"
        app:layout_constraintHorizontal_bias="0.026"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

</android.support.constraint.ConstraintLayout>